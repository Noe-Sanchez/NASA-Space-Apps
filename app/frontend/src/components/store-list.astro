---
const stores = [
  {
    name: 'Adidas',
    distance: '0.5 mi',
    status: "Open 'til 8pm",
    logo: '🏃',
    bgColor: 'bg-white'
  },
  {
    name: 'Nike',
    distance: '0.7 mi',
    status: "Open 'til 8pm",
    logo: '✓',
    bgColor: 'bg-pink-200'
  },
  {
    name: 'Puma',
    distance: '0.3 mi',
    status: "Open 'til 8pm",
    logo: '🐆',
    bgColor: 'bg-white'
  },
  {
    name: 'Under Armour',
    distance: '0.2 mi',
    status: "Open 'til 8pm",
    logo: 'UA',
    bgColor: 'bg-white'
  },
  {
    name: 'Timberland',
    distance: '0.4 mi',
    status: "Open 'til 8pm",
    logo: '🌲',
    bgColor: 'bg-amber-200'
  },
  {
    name: 'EA7 Emporio Armani',
    distance: '2.1 mi',
    status: "Open 'til 8pm",
    logo: 'EA7',
    bgColor: 'bg-zinc-400'
  },
  {
    name: 'Converse',
    distance: '2.5 mi',
    status: "Open 'til 8pm",
    logo: '⭐',
    bgColor: 'bg-zinc-400'
  }
];
---

<div class="space-y-1 px-4 pb-4">
  {stores.map((store) => (
    <div class="flex items-center gap-3 p-3 hover:bg-zinc-900 rounded-lg transition-colors group cursor-pointer">
      <!-- Logo -->
      <div class={`w-12 h-12 ${store.bgColor} rounded-full flex items-center justify-center flex-shrink-0 text-xl font-bold`}>
        {store.logo}
      </div>

      <!-- Store Info -->
      <div class="flex-1 min-w-0">
        <h3 class="text-white font-medium text-sm">{store.name}</h3>
        <div class="flex items-center gap-2 text-xs text-zinc-400">
          <span>{store.distance}</span>
          <span>•</span>
          <span class="text-green-400">{store.status}</span>
        </div>
      </div>

      <!-- Action Icons -->
      <div class="flex items-center gap-2 flex-shrink-0">
        <button class="p-1.5 hover:bg-zinc-800 rounded-lg transition-colors">
          <svg class="w-5 h-5 text-zinc-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </button>
        <button class="p-1.5 hover:bg-zinc-800 rounded-lg transition-colors">
          <svg class="w-5 h-5 text-zinc-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
        </button>
      </div>
    </div>
  ))}
</div>
